package session18;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.WebElement;

public class Practice {

	public static void main(String[] args) {
		String requiredProduct = "ADIDAS ORIGINAL";
		WebDriver driver = new ChromeDriver();
		driver.get("https://rahulshettyacademy.com/client");
		driver.manage().window().maximize();
		
		driver.findElement(By.id("userEmail")).sendKeys("anshika@gmail.com");
		driver.findElement(By.id("userPassword")).sendKeys("Iamking@000");
		driver.findElement(By.id("login")).click();
		
		List<WebElement> products = driver.findElements(By.cssSelector("div.card-body b"));
		WebElement expectedProduct = products.stream().filter(s->s.getText().contains(requiredProduct)).findFirst().orElse(null);
		expectedProduct.findElement(By.cssSelector("i.fa.fa-shopping-cart")).click();

	}

}
